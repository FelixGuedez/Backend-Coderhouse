<div>
    <h2 style="color:orange;">Lista de Productos</h2>

    {{#if DB_PRODUCTOS}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: green;">
                <th>Producto</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            {{#each DB_PRODUCTOS}}
            <tr>
                <td>{{this.producto}}</td>
                <td>{{this.precio}}</td>
                <td>
                    <img width="30" src="{{this.Imagen-URL}}" alt="">
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
    <h3 class="alert alert-warning">No se encontraron productos</h3>
    {{/if}}
    <form action="/" method="GET">
        <button class="btn btn-success mt-3 mb-5">Ir a Formulario</button>
    </form>
</div>